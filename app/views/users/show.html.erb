<h2> User Details</h2>

<div class="card card-header results-block">
    <table class="col-md-12">
        <tbody> 
            <tr>
                <td><strong>Name: </strong><%= @user.full_name%>&nbsp;&nbsp;&nbsp;</td>
                <td><strong>Email: </strong><%= @user.email%>&nbsp;&nbsp;&nbsp;</td>
                <td>
                    <%if current_user.not_friends_with?(@user)%>
                        <%= link_to 'Add to connections', friendships_path(friend: @user), class: "btn btn-sm btn-success", method: :post %>&nbsp;&nbsp;&nbsp;
                    <%else%>
                        <span class="badge rounded-pill text-bg-dark">
                            You are alredy a connection
                        </span> 
                    <%end%>
                </td>
            </tr>                  
        </tbody>
    </table>
</div>

<%  if ! @tracked_stocks.empty? %>
    <%= render 'stocks/list'%>
<%else%>
    <p class='lead'>This user is not tracking any stocks </p>
<% end %>
<%= link_to'Back', my_friends_path, class:"btn btn-primary"%>
